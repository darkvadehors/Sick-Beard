    jQuery('#config-components').tabs();
    jQuery('#subtitles_dir').fileBrowser({ title: 'Select Subtitles Download Directory' });    
//-->
</script>
#include $os.path.join($sickbeard.PROG_DIR, "data/interfaces/default/inc_bottom.tmpl")
